version: "3.4"
services:
  postgres:
    hostname: postgres
    container_name: postgres
    image: postgres:13.3
    #env_file:
    #- vars.env
    environment:
      POSTGRES_DB: "habrdb"
      POSTGRES_USER: "habrpguser"
      POSTGRES_PASSWORD: "pgpwd4habr"
      PGDATA: "/var/lib/postgresql/data/pgdata"
    volumes:
      - postgres/entrypoint:/docker-entrypoint-initdb.d
      - postgres/data:/var/lib/postgresql/data
    ports:
      - "6000:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U habrpguser -d habrdb"]
      interval: 1m30s
      timeout: 10s
      retries: 3
      start_period: 40s
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
        max-size: "2048k"
        max-file: "4"
    deploy:
      resources:
        limits:
          cpus: '1'
          memory: 4G